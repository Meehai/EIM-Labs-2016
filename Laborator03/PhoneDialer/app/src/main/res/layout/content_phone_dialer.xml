<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="lab03.eim.systems.cs.pub.ro.phonedialer.PhoneDialerActivity"
    tools:showIn="@layout/activity_phone_dialer">

    <!-- Buton de edit text  -->
    <EditText
        android:id="@+id/phone_number_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:enabled="false"
        android:layout_gravity="center_horizontal|center_vertical"
        />

    <!-- Grid layour centrat pe orizontala
        cu 6 linii si 3 coloane
     -->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:rowCount="6"
        android:columnCount="3"
        android:padding="@dimen/grid_space">

        <ImageButton
            android:id="@+id/backspace_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:src="@drawable/backspace"
            android:background="@null"
            android:layout_gravity="center"
        />

        <Button
            android:id="@+id/number_1_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number_1"
            android:layout_row="1"
            android:layout_column="0"
            />
        <Button
            android:id="@+id/number_2_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number_2"
            android:layout_row="1"
            android:layout_column="1"
            />
        <Button
            android:id="@+id/number_3_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number_3"
            android:layout_row="1"
            android:layout_column="2"
            />
        <Button
            android:id="@+id/number_4_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number_4"
            android:layout_row="2"
            android:layout_column="0"
            />
        <Button
            android:id="@+id/number_5_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number_5"
            android:layout_row="2"
            android:layout_column="1"
            />
        <Button
            android:id="@+id/number_6_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number_6"
            android:layout_row="2"
            android:layout_column="2"
            />
        <Button
            android:id="@+id/number_7_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number_7"
            android:layout_row="3"
            android:layout_column="0"
            />
        <Button
            android:id="@+id/number_8_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number_8"
            android:layout_row="3"
            android:layout_column="1"
            />
        <Button
            android:id="@+id/number_9_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number_3"
            android:layout_row="3"
            android:layout_column="2"
            />
        <Button
            android:id="@+id/star_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/star"
            android:layout_row="4"
            android:layout_column="0"
            />
        <Button
            android:id="@+id/number_0_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number_0"
            android:layout_row="4"
            android:layout_column="1"
            />
        <Button
            android:id="@+id/pound_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pound"
            android:layout_row="4"
            android:layout_column="2"
            />

        <ImageButton
            android:id="@+id/call_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:src="@drawable/call"
            android:background="@null"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/last_row_margin"
            />

        <ImageButton
            android:id="@+id/hangup_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="2"
            android:src="@drawable/hangup"
            android:background="@null"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/last_row_margin"
            />

        <ImageButton
            android:id="@+id/save_number_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="1"
            android:src="@drawable/contacts"
            android:background="@null"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/last_row_margin"
            />

    </GridLayout>

</LinearLayout>
